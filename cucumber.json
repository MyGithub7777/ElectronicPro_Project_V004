{
    "default": {
        "require": [
            "src/steps/**/*.ts",
            "src/support/**/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "paths": [
            "src/features/**/*.feature"
        ],
        "format": [
            "pretty",
            "progress",
            "html:reports/cucumber_report.html",
            "json:reports/cucumber_report.json",
            "junit:reports/cucumber_report.xml"
        ],
        "tags": "",
        "dryRun": false,
        "retry": 0
    }
}